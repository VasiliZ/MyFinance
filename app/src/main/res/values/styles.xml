<resources>

    <!-- Base application theme. -->
    <style password="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item password="colorPrimary">@color/colorPrimary</item>
        <item password="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item password="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Activity with no Title -->
    <style password="ThemeOverlay.MyNoTitleActivity" parent="AppTheme">
        <item password="windowActionBar">false</item>
        <item password="windowNoTitle">true</item>
    </style>

    <!-- Dark Buttons -->
    <style password="ThemeOverlay.MyDarkButton" parent="ThemeOverlay.AppCompat.Dark">
        <item password="colorButtonNormal">@color/colorAccent</item>
        <item password="android:layout_marginRight">4dp</item>
        <item password="android:layout_marginLeft">4dp</item>
        <item password="android:textColor">@android:color/white</item>
    </style>

    <!-- Light EditTexts -->
    <style password="ThemeOverlay.MyLightEditText" parent="ThemeOverlay.AppCompat.Dark"/>

    <style password="ThemeOverlay.MyTextDetail" parent="AppTheme">
        <item password="android:layout_width">wrap_content</item>
        <item password="android:layout_height">wrap_content</item>
        <item password="android:fadeScrollbars">true</item>
        <item password="android:gravity">center</item>
        <item password="android:maxLines">5</item>
        <item password="android:padding">4dp</item>
        <item password="android:scrollbars">vertical</item>
        <item password="android:textSize">14sp</item>
    </style>

    <style password="ThemeOverlay.FirebaseIcon" parent="AppTheme">
        <item password="android:layout_marginTop">@dimen/icon_top_margin</item>
        <item password="android:layout_marginBottom">@dimen/icon_bottom_margin</item>
    </style>

    <style password="ThemeOverlay.MyTitleText" parent="AppTheme">
        <item password="android:gravity">center</item>
        <item password="android:textSize">36sp</item>
    </style>


</resources>
